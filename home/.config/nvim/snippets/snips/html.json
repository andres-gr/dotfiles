{
    "Template": {
        "prefix": "template",
        "body": "<template name=\"${1:name}\">\n    $2\n</template>$0",
        "description": "Spacebars declare new template"
    },
    "Call helper": {
        "prefix": "helper",
        "body": "{{ ${1:helper} }}$0",
        "description": "Spacebars call helper"
    },
    "Console log": {
        "prefix": "cl",
        "body": "{{ consoleLog ${1:helper} }}$0",
        "description": "Spacebars console log"
    },
    "Call html helper": {
        "prefix": "html",
        "body": "{{{ ${1:helper} }}}$0",
        "description": "Spacebars call html helper"
    },
    "Instance get var": {
        "prefix": "vget",
        "body": "instance.${1:var}.get$0",
        "description": "Spacebars get template instance reactive var"
    },
    "Instance get dict": {
        "prefix": "dget",
        "body": "instance.${1:dict}.get \"${2:name}\"$0",
        "description": "Spacebars get template instance reactive dictionary"
    },
    "Field get": {
        "prefix": "fget",
        "body": "instance.${1:field}$0",
        "description": "Spacebars get template instance reactive field"
    },
    "Partial": {
        "prefix": "pa",
        "body": "{{> ${1:template} }}$0",
        "description": "Spacebars call partial template"
    },
    "Template dynamic": {
        "prefix": "dyna",
        "body": "{{> Template.dynamic template=${1:template} data=${2:args} }}$0",
        "description": "Spacebars call template dynamic"
    },
    "If Else": {
        "prefix": "ife",
        "body": "{{#if ${1:condition}}}\n    $2\n{{else}}\n    $3\n{{/if}}$0",
        "description": "Spacebars if else statement"
    },
    "Unless Else": {
        "prefix": "une",
        "body": "{{#unless ${1:condition}}}\n    $2\n{{else}}\n    $3\n{{/unless}}$0",
        "description": "Spacebars unless else statement"
    },
    "With": {
        "prefix": "wt",
        "body": "{{#with ${1:data}}}\n    $2\n{{/with}}$0",
        "description": "Spacebars with context statement"
    },
    "Custom block helper": {
        "prefix": "tblk",
        "body": "{{#${1:template} ${2:args}}}\n    $3\n{{/${1:template}}}$0",
        "description": "Spacebars custom template block"
    },
    "Custom block helper else": {
        "prefix": "teblk",
        "body": "{{#${1:template} ${2:args}}}\n    $3\n{{else}}\n    $4\n{{/${1:template}}}$0",
        "description": "Spacebars custom template block else"
    },
    "Let": {
        "prefix": "let",
        "body": "{{#let ${1:name}=${2:varValue}}}\n    $3\n{{/let}}$0",
        "description": "Spacebars declare variable"
    },
    "Each in": {
        "prefix": "eain",
        "body": "{{#each ${1:var} in ${2:array}}}\n    $3\n{{/each}}$0",
        "description": "Spacebars each in loop"
    }
}
